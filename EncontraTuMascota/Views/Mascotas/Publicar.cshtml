@model EncontraTuMascota.Models.Mascota

@{
    ViewData["Title"] = "Publicar Mascota";
}

@* 
    Formulario para publicar una mascota encontrada.
    Tiene de todo: foto, sexo, raza, ubicaci√≥n y datos de contacto.
    Ac√° es donde la gente sube info de los perritos que encontr√≥ en la calle.
*@
<div class="publicar-page">
    <div class="page-header">
        <h1>üêï Publicar mascota encontrada</h1>
    </div>

    <div class="form-container">
        @* El enctype="multipart/form-data" es OBLIGATORIO para poder subir archivos *@
        <form asp-action="Publicar" method="post" enctype="multipart/form-data" class="mascota-form">
            @Html.AntiForgeryToken()
            
            @* Si hay errores de validaci√≥n, se muestran ac√° arriba *@
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            @* Input para subir la foto de la mascota *@
            <div class="form-group">
                <label asp-for="FotoUrl" class="form-label">Foto de la mascota *</label>
                <input type="file" name="foto" id="foto" class="form-control" accept="image/*" required />
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>

            @* Sexo: Masculino o Femenino (radio buttons) *@
            <div class="form-group">
                <label asp-for="Sexo" class="form-label"></label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" asp-for="Sexo" value="@EncontraTuMascota.Models.Sexo.Masculino" />
                        Masculino
                    </label>
                    <label class="radio-label">
                        <input type="radio" asp-for="Sexo" value="@EncontraTuMascota.Models.Sexo.Femenino" />
                        Femenino
                    </label>
                </div>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            @* Dropdown con todas las razas disponibles *@
            <div class="form-group">
                <label asp-for="Raza" class="form-label"></label>
                <select asp-for="Raza" class="form-control" asp-items="Html.GetEnumSelectList<EncontraTuMascota.Models.Raza>()">
                    <option value="">Selecciona una raza</option>
                </select>
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>

            @* D√≥nde encontraste a la mascota *@
            <div class="form-group">
                <label asp-for="Ubicacion" class="form-label"></label>
                <input asp-for="Ubicacion" class="form-control" 
                       placeholder="Ejemplo: Av. Corrientes 1234, Buenos Aires" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <hr style="margin: 2rem 0; border-color: #ddd;" />
            
            <h3 style="color: var(--primary-color); margin-bottom: 1.5rem;">üìû Datos de contacto</h3>

            @* Tu nombre para que te puedan contactar *@
            <div class="form-group">
                <label asp-for="NombreContacto" class="form-label"></label>
                <input asp-for="NombreContacto" class="form-control" placeholder="Juan P√©rez" />
                <span asp-validation-for="NombreContacto" class="text-danger"></span>
            </div>

            @* Tel√©fono (tiene que ser formato argentino con +54) *@
            <div class="form-group">
                <label asp-for="TelefonoContacto" class="form-label"></label>
                <input asp-for="TelefonoContacto" class="form-control" placeholder="+541112345678" />
                <span asp-validation-for="TelefonoContacto" class="text-danger"></span>
                <!--<small class="form-text">Formato: +54 seguido del c√≥digo de √°rea y n√∫mero (ej: +541112345678)</small>-->
            </div>

            @* Email de contacto *@
            <div class="form-group">
                <label asp-for="EmailContacto" class="form-label"></label>
                <input asp-for="EmailContacto" class="form-control" type="email" placeholder="contacto@ejemplo.com" required />
                <span asp-validation-for="EmailContacto" class="text-danger"></span>
            </div>

            <hr style="margin: 2rem 0; border-color: #ddd;" />

            @* Descripci√≥n: ac√° pod√©s contar m√°s detalles de la mascota *@
            <div class="form-group">
                <label for="descripcion" class="form-label">Descripci√≥n</label>
                <textarea id="descripcion" name="descripcion" class="form-control" rows="5" 
                          placeholder="Describi la mascota: color, tama√±o, caracter√≠sticas especiales, etc." 
                          required minlength="10" maxlength="1000">@ViewBag.Descripcion</textarea>
                <!--<small class="form-text">M√≠nimo 10 caracteres, m√°ximo 1000</small>-->
            </div>

            @* Botones de acci√≥n *@
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <span>üì¢</span> Publicar Mascota
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@* Scripts de validaci√≥n del lado del cliente (jQuery Validation) *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview de la imagen seleccionada
        document.getElementById('foto').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const fileName = file.name;
                const fileSize = (file.size / 1024 / 1024).toFixed(2); // MB
                
                // Mostrar confirmaci√≥n de que se seleccion√≥ el archivo
                const label = document.querySelector('label[for="foto"]');
                if (!document.getElementById('file-info')) {
                    const info = document.createElement('small');
                    info.id = 'file-info';
                    info.className = 'form-text text-success';
                    info.style.display = 'block';
                    info.style.marginTop = '5px';
                    label.parentElement.appendChild(info);
                }
                
                document.getElementById('file-info').innerHTML = 
                    `‚úì Archivo seleccionado: <strong>${fileName}</strong> (${fileSize} MB)`;
            }
        });
    </script>
}
